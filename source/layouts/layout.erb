<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>
      <% if current_page.data.title %>
        <%= "#{current_page.data.title} | #{t('head.title')}" %>
      <% else%>
        <%= t('head.title') %>
      <% end %>
    </title>

    <%= stylesheet_link_tag "all" %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- Include external CSS before external JavaScript -->
    <%= javascript_include_tag  "https://code.jquery.com/jquery-2.2.4.min.js" %>
    <%= javascript_include_tag  "all" %>

  </head>

  <body class="<%= page_classes %>">
    <%= partial "google_analytics" %>


    <!-- NAVBAR START -->
    <%= partial "nav" %>
    <!-- NAVBAR END -->

    <!-- MAIN START -->
    <main class="container-fluid">
      <%= yield %>
    </main>
    <!-- MAIN END -->

    <nav class="navbar navbar-default navbar-fixed-bottom" id="monarcheurasia-footer">
      <div class="text-center">
          <span class="accent">Monarch Eurasia</span>
          <span class="values">- Real Estate Consultants - Designers - Project Managers -</span>
          <span class="accent">Building Value</span>
      </div>
    </nav>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
