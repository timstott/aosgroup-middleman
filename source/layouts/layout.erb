<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>
      <% if current_page.data.title %>
        <%= "#{current_page.data.title} | #{t('head.title')}" %>
      <% else%>
        <%= t('head.title') %>
      <% end %>
    </title>

    <%= stylesheet_link_tag "all" %>

    <!-- PURE CSS - purecss.io -->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css">
    <!--<![endif]-->

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- Include external CSS before external JavaScript -->
    <%= javascript_include_tag  "all" %>

  </head>

  <body class="<%= page_classes %>">
    <%= partial "google_analytics" %>


    <!-- NAVBAR START -->
    <%= partial "nav" %>
    <!-- NAVBAR END -->

    <!-- MAIN START -->
    <% if page_classes == 'index' %>
      <%= yield %>
    <% else %>
      <div id="main-container" class="pure-g full-height">

        <div class="pure-u-1 pure-u-md-2-24 pure-u-lg-4-24"></div>
        <div class="pure-u-1 pure-u-md-20-24 pure-u-lg-16-24 full-height">
          <%= yield %>
        </div>

      </div>
    <% end %>
    <!-- MAIN END -->

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
