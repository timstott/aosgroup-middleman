@import "mixins";

.index {
  // Body background image
  background-image: url("<%#= image_path('welcome_to_almaty.jpg') %>");
  background-size: cover;

  color: #fff;

  h1 {
    font-size: 1.2em;
    font-weight: 500;
    text-shadow: 2px 1px 1px #000 ;
  }

  p {
    text-shadow: 2px 1px 1px #000 ;
  }

  #stripe-container {
    height: 100%;

    img {
      width: 100%;
      max-width: 265px;
    }

    #stripe-inner-container {
       margin: 100px 25px 0 25px;
    }

    #stripe-content {
      background-color: rgba(0, 0, 0, 0.65);
      width: 280px;

    }
  }
}

