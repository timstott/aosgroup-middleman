<div class="justified segment segment-item" id="our_team">
    <!-- GRID START -->
    <div class="pure-g">

      <div class="pure-u-1">
        <h2><%= t("about_us.our_team.header") %></h2>
      </div>

      <div class="pure-u-1 pure-u-sm-11-24">
        <%= t("about_us.our_team.content_1_html") %>
      </div>

      <div class="pure-u-sm-2-24"></div>

      <div class="pure-u-1 pure-u-sm-11-24">
        <%= t("about_us.our_team.content_2_html") %>
      </div>

    </div>
    <!-- GRID END -->

    <!-- GRID START -->
    <div class="pure-g">

      <% t('team').each_with_index do |member, i| %>

        <div class="pure-u-1-2 pure-u-sm-1-3 member">
          <%= image_tag("team/#{member[:name].downcase.gsub(' ','_')}.jpg") %>
          <span class="name"><%= member[:name] %></span>
          <span class="position"><%= member[:position] %></span>
        </div>


      <% end %>
    </div>
    <!-- GRID END -->
</div>
