<div class="justified segment segment-item" id="our_values">
  <div class="vertical-align">

    <!-- GRID START -->
    <div class="pure-g">

      <div class="pure-u-1 pure-u-sm-14-24">
        <h2><%= t("about_us.our_values.header") %></h2>
      </div>

      <div class="pure-u-1 pure-u-sm-14-24">

        <% t('about_us.our_values.values').each_with_index do |value, i| %>

          <div class="value <%= "value-#{i+1}" %>">
            <span class="name"><%= value[:name] %></span>
            <ul>
              <% value[:items].each do |item| %>
                <li><%= item %></li>
              <% end %>
            </ul>
          </div>

        <% end %>

      </div>

      <div class="pure-u-sm-2-24"></div>

      <div class="pure-u-sm-8-24">
        <div class="image-wrapper">
          <%= image_tag("about_us/our_values.png") %>
        </div>
      </div>

    </div>
    <!-- GRID END -->

  </div>
</div>
