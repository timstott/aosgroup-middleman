<% t(category).keys.each do |section| %>
  <div class="justified segment segment-item" id="<%= section %>">
    <div class="vertical-align">

      <!-- GRID START -->
      <div class="pure-g">

        <div class="pure-u-1 pure-u-sm-14-24">
          <h2><%= t("#{category}.#{section}.header") %></h2>
        </div>

        <div class="pure-u-1 pure-u-sm-14-24">
          <%= t("#{category}.#{section}.content_html") %>
        </div>

        <div class="pure-u-sm-2-24"></div>

        <div class="pure-u-sm-8-24">
          <div class="image-wrapper">
            <%= image_tag("#{category}/#{section}.png") %>
          </div>
        </div>

      </div>
      <!-- GRID END -->

    </div>
  </div>
<% end %>
