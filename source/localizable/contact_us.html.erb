---
title: Contact Us
---

<div class="justified segment segment-item standalone">
  <div class="vertical-align">

    <!-- GRID START -->
    <div class="pure-g">

      <div class="pure-u-1">
        <h2><%= t('contact_us.header') %></h2>
      </div>

      <div class="pure-u-1">
        <%= t('contact_us.content_html') %>
        <p>
          <a class="pure-button pure-button-primary"
             href="mailto:inquiries@aosgroup.kz">
            <%= t('contact_us.email_us_button') %>
          </a>
        </p>
      </div>
    </div>
    <!-- GRID END -->

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-20-24">
        <div id="googlemap"></div>
      </div>
      <div class="pure-u-1 pure-u-md-4-24">

        <div id="googlemap-city-selector" class="pure-menu pure-menu-open">
          <ul>
            <% t('locations').keys.each_with_index do |location, i| %>
              <li>
                <a href="#<%= i %>"><%= t("locations.#{location}.city") %></a>
              </li>
            <% end %>
          </ul>
        </div>

      </div>
    </div>

  </div>
</div>

<script>

  <% t('locations').keys.each do |location| %>

    $(document).ready(function() {
        AOS.map.locations.push({
          coordinates: <%= t("locations.#{location}.coordinates") %>,
          city:        "<%= t("locations.#{location}.city") %>",
          info:        "<%= js_escape_html t("locations.#{location}.info_html") %>"
        });
    });

  <% end %>
</script>

<script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDMG8jt0XV6oqDQvYJhEZ_oAzNMSEoQvMQ&sensor=false&extension=.js'></script>
