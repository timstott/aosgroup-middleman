---
title: Contact Us
---

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h1 class="text-center"><%= t('contact_us.header') %></h1>

    <div class="text-justify" >
      <%= t('contact_us.content_html') %>
    </div>

    <p>
      <a class="btn btn-default"
         href="mailto:inquiries@monarcheurasia.com">
         <span class="glyphicon glyphicon-envelope"></span>
         <%= t('contact_us.email_us_button') %>
      </a>
    </p>

    <div id="googlemap"></div>
  </div>
</div>

<script>
  <% t('locations').each do |location| %>

    $(document).ready(function() {
        AOS.map.locations.push({
          coordinates: <%= location[:coordinates] %>,
          info:        "<%= js_escape_html location[:info_html] %>"
        });
    });

  <% end %>
</script>

<script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDMG8jt0XV6oqDQvYJhEZ_oAzNMSEoQvMQ&sensor=false&extension=.js'></script>
